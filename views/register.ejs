  <body>
    <button type="button" name="modal" id="modal">open</button>

    <div class="modal fade" id="addMandal">
      <form action="/newAccount" method="post">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title">만다라트</h4>
            </div>
            <div class="modal-body">
              <p>
                <label>아이디</label><br/>
                <input type="text" name="id" placeholder="아이디" id="id">
              </p>

              <p>
                <label>비밀번호</label><br/>
                <input type="password" name="password" placeholder="비밀번호" id="password">
              </p>

              <p>
                <label>이메일</label><br/>
                <input type="email" name="email" placeholder="이메일" id="email">
              </p>

              <p>
                <label>별명</label><br/>
                <input type="text" name="displayname" placeholder="별명" id="nickname">
              </p>
              
            </div>
            <div class="modal-footer">
              <button type = "submit" class="btn btn-primary" data-option="add" id="add-modal">등록</button>
              <button type = "button" class="btn btn-default" data-dismiss="modal" id="modal-cancle">취소</button>
            </div>
          </div>
        </div>
      </form>
    </div>


